<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="bjk.movies"
      android:versionCode="7" android:versionName="1.3.5">
    <application android:icon="@drawable/movico" android:label="@string/app_name">
        <provider android:name=".MovieConnector" android:authorities="bjk.movies.MovieConnector" />
        <activity android:name=".MainScreen" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MovieMonthSearch" android:label="@string/app_name">
        	<intent-filter>
        		<action android:name="android.intent.action.VIEW" />
        	</intent-filter>
        </activity>
        <activity android:name=".SearchScreen" android:label="@string/app_name">
        	<intent-filter>
        		<action android:name="android.intent.action.VIEW" />
        	</intent-filter>
        </activity>
        <activity android:name=".HomeVideo" android:label="@string/app_name">
        	<intent-filter>
        		<action android:name="android.intent.action.VIEW" />
        	</intent-filter>
        </activity>
        <activity android:name=".YearSearch" android:label="@string/app_name">
        	<intent-filter>
        		<action android:name="android.intent.action.VIEW" />
        	</intent-filter>
        </activity>

    </application>
    <uses-sdk android:minSdkVersion="2" />

</manifest> 